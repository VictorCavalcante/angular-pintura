doctype
html(ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title angular-pintura demo
    link(href='styles/styles.css', rel='stylesheet')

    //- script(type='text/ng-template', id='panoramacontrols.html')

  body(ng-controller='PinturaCtrl')
    .container
      h1 angular-pintura
      .row 
        form(role=form).col-md-2
          .form-group
            button.btn.btn-default.btn-block(type='button', ng-click='setURLSource1()') URL-Source 1
            button.btn.btn-default.btn-block(type='button', ng-click='setURLSource2()') URL-Source 2
            button.btn.btn-default.btn-block(type='button', ng-click='setObjectSource()') Object-Source
            button.btn.btn-default.btn-block(type='button', ng-click="setSmallImage()") Small-Image
          .form-group: .checkbox: label
            input(type='checkbox', ng-model='image.fitOnload')
            | Fit-on-load
          .form-group
            label
              | Scaling
              input.form-control(ng-model='image.scaling', type="number")
            label
              | Max-Scaling
              input.form-control(ng-model='image.maxScaling', type="number")
            label
              | Scale-Step
              input.form-control(ng-model='image.scaleStep', type="number")
            label
              | MWheel-Scale-Step
              input.form-control(ng-model='image.mwScaleStep', type="number")
          .form-group 
            label
              | Position-X
              input.form-control(ng-model='image.position.x', type="number")
            label
              | Position-Y
              input.form-control(ng-model='image.position.y', type="number")
            label
              | Move-Step
              input.form-control(ng-model='image.moveStep', type="number")
        .col-md-10
          ng-pintura(src='image.src', 
                     scaling='image.scaling', 
                     position='image.position',
                     max-scaling='image.maxScaling',
                     scale-step='image.scaleStep',
                     move-step='image.moveStep',
                     mw-scale-step='image.mwScaleStep',
                     fit-onload='image.fitOnload')
            .zoomslider
              input(ng-model='slider.value', ng-change='sliderChange()', orient='vertical', type='range', min='0', max='100', step='1', ng-disabled='scalingDisabled')
            button.btn.btn-default.zoomin(ng-click='zoomIn()', ng-disabled='scalingDisabled'): span.glyphicon.glyphicon-plus
            button.btn.btn-default.zoomout(ng-click='zoomOut()', ng-disabled='scalingDisabled'): span.glyphicon.glyphicon-minus
            button.btn.btn-default.moveup(ng-click='moveUp()'): span.glyphicon.glyphicon-chevron-up
            button.btn.btn-default.movedown(ng-click='moveDown()'): span.glyphicon.glyphicon-chevron-down
            button.btn.btn-default.moveleft(ng-click='moveLeft()'): span.glyphicon.glyphicon-chevron-left
            button.btn.btn-default.moveright(ng-click='moveRight()'): span.glyphicon.glyphicon-chevron-right
            button.btn.btn-default.movecenter(ng-click='fitInView()'): span.glyphicon.glyphicon-screenshot
    // libs
    script(src='lib/angular/js/angular.min.js')
    //- script(src='lib/angular/js/angular.js')
    script(src='lib/konva/js/konva.min.js')
    //- script(src='lib/konva/js/konva.js')
    // panoramaviewer scripts
    script(src='js/angular-pintura.js')
    script(src='js/app.js')